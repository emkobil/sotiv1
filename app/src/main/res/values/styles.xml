        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">#FFC50C</item>
        <item name="colorPrimaryDark">#E5B009</item>
        <item name="colorAccent">@color/colorAccent</item>
